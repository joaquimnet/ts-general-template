{
  "name": "typescript-lib-template",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --transpileOnly --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "build": "swc src -d dist --copy-files --delete-dir-on-start",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "rome check src --apply",
    "format": "rome format src --write",
    "ci": "tsc --noEmit && rome ci src && npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.51",
    "@swc/helpers": "^0.5.0",
    "nodemon": "^2.0.22",
    "rome": "^12.0.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  }
}
